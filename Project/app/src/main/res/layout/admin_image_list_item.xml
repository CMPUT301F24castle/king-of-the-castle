<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="20dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/event_list_content_bg"
        android:orientation="horizontal"
        android:padding= "10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="100dp"
            android:layout_gravity="center"
            android:background="@drawable/dark_purple_rounded_corner_bg"
            android:src="@drawable/baseline_person_24_black" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/remove_image_button"
            android:layout_width="140dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_light_green_button"
            android:backgroundTint="@null"
            android:backgroundTintMode="src_in"
            android:text="Remove Image"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>