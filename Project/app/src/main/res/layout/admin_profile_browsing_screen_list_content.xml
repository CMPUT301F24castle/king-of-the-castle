<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_list_content_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/light_purple"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/organizer_event_poster"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Event Poster"
                    android:src="@drawable/missing_image_icon"
                    android:background="@drawable/dark_purple_rounded_corner_bg"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(User Name)\nEmail: some value\nPhone number: some value\nDevice ID: some value"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:background="@drawable/dark_purple_rounded_corner_bg"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remove_image_button"
                android:layout_width="140dp"
                android:layout_height="26dp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Remove Image"
                android:textSize="13dp"
                android:layout_marginEnd="50dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remove_profile_button"
                android:layout_width="140dp"
                android:layout_height="26dp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Remove Profile"
                android:textSize="13dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>