<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/entrant_event_waitlist_content_outer_bg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="8dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/entrant_event_waitlist_content_inner_bg"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entrant_event_list_item_name"
            android:text="Event Name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entrant_event_list_item_date"
                android:text="Date: MM/DD"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entrant_event_list_item_start"
                android:text="Starts at: 00:00 AM/PM"
                android:textSize="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/entrant_event_list_cancel_accepted_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="1dp"
            android:backgroundTint="@null"
            android:background="@drawable/entrant_event_waitlist_content_button_bg"
            android:text="Cancel"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/entrant_event_list_details_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="1dp"
            android:backgroundTint="@null"
            android:background="@drawable/entrant_event_waitlist_content_button_bg"
            android:text="Details"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
