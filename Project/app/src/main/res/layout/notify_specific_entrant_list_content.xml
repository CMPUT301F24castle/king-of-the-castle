<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_purple_rounded_corner_bg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/organizer_event_qr_code"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Event QR Code"
        android:src="@drawable/baseline_person_24_black"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/light_purple_rounded_corner_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrant's Name"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrant's Phone Number"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:textSize="18dp"
            android:layout_marginStart="5dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
