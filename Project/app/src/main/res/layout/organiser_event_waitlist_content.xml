<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/event_list_content_bg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <ImageView
        android:id="@+id/organizer_event_poster"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Entrant Profile Photo"
        android:layout_gravity="center_vertical"
        android:src="@drawable/missing_image_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entrant_name_LOE_screen"
            android:layout_margin="2dp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entrant_phone_number_LOE_screen"
            android:layout_margin="2dp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_location_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="View Location"
            android:layout_margin="2dp"
            android:textSize="13dp"
            android:fontFamily="@font/inter_semibold"
            />

    </LinearLayout>
</LinearLayout>
