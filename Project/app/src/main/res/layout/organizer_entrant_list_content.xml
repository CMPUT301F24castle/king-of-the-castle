<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_list_content_bg"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="12sp"
        android:paddingStart="24sp"
        android:paddingEnd="12sp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/entrant_pfp"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:contentDescription="Entrant PFP"
            android:src="@drawable/baseline_person_24_black"
            android:background="@drawable/dark_purple_rounded_corner_with_black_border"
            android:layout_gravity="center"
            android:layout_marginEnd="24sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/light_purple"
            android:orientation="vertical"
            android:padding="5sp"
            android:paddingStart="15sp"
            android:paddingEnd="40sp">
            <TextView
                android:id="@+id/entrant_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Entrant's Name)\n(Entrant's Phone Number)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:padding="5sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_entrant_location_button"
                android:layout_width="120sp"
                android:layout_height="20sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="View Location"
                android:textSize="13sp"
                android:layout_marginStart="2sp"
                android:layout_marginBottom="3sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>