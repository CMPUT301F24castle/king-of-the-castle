<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialogue_notification_bg"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose type of entrant to be viewed:"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_waitlist_entrants_button"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@null"
        android:background="@drawable/rounded_light_green_button"
        android:text="View Wailist Entrants"
        android:textSize="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_invited_entrants_button"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@null"
        android:background="@drawable/rounded_light_green_button"
        android:text="View Invited Entrants"
        android:textSize="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_cancelled_entrants_button"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@null"
        android:background="@drawable/rounded_light_green_button"
        android:text="View Cancelled Entrants"
        android:textSize="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_enrolled_entrants_button"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@null"
        android:background="@drawable/rounded_light_green_button"
        android:text="View Enrolled Entrants"
        android:textSize="13dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/choose_entrant_type_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center"/>
</LinearLayout>