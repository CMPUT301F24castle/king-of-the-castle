<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/event_list_content_bg"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/light_purple"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/event_list_content_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/organizer_event_poster"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Event Poster"
                android:src="@drawable/missing_image_icon" />

            <ImageView
                android:id="@+id/organizer_event_qr_code"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Event QR Code"
                android:src="@drawable/missing_image_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/organizer_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/event_list_content_bg"
            android:layout_gravity="center"
            android:padding="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="Event Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_entrants_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="View Entrants"
            android:textSize="13dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sample_entrants_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="Sample Entrants"
            android:textSize="13dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_notifications_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="Send Notifications"
            android:textSize="13dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_event_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="Edit Event"
            android:textSize="13dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_undecided_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="Cancel Undecided"
            android:textSize="13dp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_event_button"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:padding="1dp"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@null"
            android:background="@drawable/rounded_light_green_button"
            android:text="Cancel Event"
            android:textSize="13dp"/>

    </LinearLayout>
</LinearLayout>
