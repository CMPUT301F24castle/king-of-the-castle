<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_list_content_bg"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:padding="16sp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="180sp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/light_purple"
            android:orientation="vertical"
            android:padding="8sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:background="@drawable/event_list_content_bg"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/organizer_event_poster"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:contentDescription="Event Poster"
                    android:src="@drawable/missing_image_icon" />

                <ImageView
                    android:id="@+id/organizer_event_qr_code"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:contentDescription="Event QR Code"
                    android:src="@drawable/missing_image_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/organizer_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:background="@drawable/event_list_content_bg"
                android:layout_gravity="center"
                android:padding="5sp"
                android:paddingEnd="15sp"
                android:paddingStart="15sp"
                android:text="Event Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10sp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_entrants_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="View Entrants"
                android:textSize="13sp"
                android:layout_marginBottom="8sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sample_entrants_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Sample Entrants"
                android:textSize="13sp"
                android:layout_marginBottom="8sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_notifications_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Send Notifications"
                android:textSize="13sp"
                android:layout_marginBottom="8sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_event_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Edit Event"
                android:textSize="13sp"
                android:layout_marginBottom="8sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_undecided_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Cancel Undecided"
                android:textSize="13sp"
                android:layout_marginBottom="8sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_event_button"
                android:layout_width="140sp"
                android:layout_height="22sp"
                android:padding="1sp"
                android:backgroundTintMode="src_in"
                android:backgroundTint="@null"
                android:background="@drawable/rounded_light_green_button"
                android:text="Cancel Event"
                android:textSize="13sp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
