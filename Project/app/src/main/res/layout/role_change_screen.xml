<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:id="@+id/event_creation_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/light_green"
        android:background="@color/dark_grey"
        android:textSize="32sp"
        android:textStyle="bold"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black"
        android:background="@drawable/edit_facility_screen_bg"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:padding="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black"
        android:background="@drawable/edit_facility_screen_bg"
        android:layout_marginTop="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="120dp"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose your role:"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/choose_role_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:background="@color/white"/>


    </LinearLayout>

    <Button
        android:id="@+id/confirm_role_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Role"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        android:background="@drawable/organizer_button_bg"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="72dp"
        android:paddingEnd="72dp"
        android:textSize="24sp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/light_green"
        android:background="@color/dark_grey"
        android:textSize="32sp"
        android:textStyle="bold"
        android:padding="15dp"
        />

</LinearLayout>